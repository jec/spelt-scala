@startuml

title Spelt Data Graph

object User {
  name
  email
  encryptedPassword
}
object ProfileItem {
  key
  value
}
object PrivateItem {
  key
  value
}
object Session {
  ulid
}
object Device {
  identifier
  displayName
  lastSeenIp
  lastSeenAt
}
object Room {
  identifier
  name
  topic
  avatar
  alias
  roomVersion
}
object RoomState {
  key
  value
}
object RoomAlias {
  name
}
object Event {
  type
  stateKey
  content
  depth
}
object Peer {
  name
}

User --> Session : AUTHENTICATED_AS
User --> Room : CREATED
User --> Room : MEMBER_OF
ProfileItem --> User : BELONGS_TO
PrivateItem --> User : BELONGS_TO
RoomState --> Room : STATE_OF
RoomAlias --> Room : FOR
Session --> Device : CONNECTED_FROM
Event --> Event : CHILD_OF
Event --> Room : SENT_TO
Peer --> Room : PARTICIPATES_IN

@enduml
